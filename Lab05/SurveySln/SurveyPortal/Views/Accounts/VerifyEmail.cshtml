@model SurveyPortal.Models.Identity.DTO.EmailVerificationDto
@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container-fluid d-flex align-items-center justify-content-center" style="background-color: #f8f9fa;">
    <div class="card shadow w-100" style="max-width: 400px; border-radius: 8px; box-shadow: 0 4px 20px rgba(0,0,0,0.1) !important;">
        <div class="card-header text-white py-3 text-center" style="background-color: #0d6efd; border-top-left-radius: 8px; border-top-right-radius: 8px;">
            <h4 class="mb-0">Verify Email</h4>
        </div>
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <p>Please enter the email address you registered with to verify your account.</p>
            </div>
            <form asp-action="VerifyEmail" asp-controller="Accounts" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" placeholder="your.email@example.com" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary">Verify</button>
                    <a asp-action="Login" asp-controller="Accounts" class="btn btn-outline-secondary">Back to Login</a>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <p class="mb-0">Need help? <a href="#">Contact Support</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/verifyEmail-validation.js"></script>
}