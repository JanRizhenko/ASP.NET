<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]SurveyPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Survey Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Surveys</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Companies" asp-action="Index">Companies</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto column-gap-2">
                    <partial name="_LoginPartial" />
                </ul>
               
            </div>
        </div>
    </nav>



    <main class="flex-grow-1 container mt-4">
        <div class="row">
            <main class="flex-grow-1 container mt-4">
                <div class="row">
                    @if (ViewData["ShowNavigationMenu"] as bool? == true)
                    {
                        <div class="col-md-3">
                        
                            @await Component.InvokeAsync("NavigationMenu")
                        
                        </div>
                    }
                    <div class="col-md-9">
                        @RenderBody()
                    </div>
                </div>
            </main>
        
        </div>
    </main>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
