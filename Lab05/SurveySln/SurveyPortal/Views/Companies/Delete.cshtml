@model SurveyPortal.Models.Company.Company

@{
    ViewData["Title"] = "Delete Company";
}

<h1>Delete Company</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this company?</h3>
    <p>This action cannot be undone and will also remove all associated surveys.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Model.Country</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Created On</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

            <dt class="col-sm-3">Number of Surveys</dt>
            <dd class="col-sm-9">@(Model.Surveys?.Count ?? 0)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CompanyID" />
    <div class="d-flex">
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.CompanyID" class="btn btn-secondary">Cancel</a>
    </div>
</form>