@model IEnumerable<SurveyPortal.Models.Company.Company>

@{
    ViewData["Title"] = "Companies";
}

<h1>Companies</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Company</a>
    </p>
}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var company in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@company.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@company.Country</h6>
                    <p class="card-text">@(company.Description?.Length > 100 ? company.Description.Substring(0, 100) + "..." : company.Description)</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Created: @company.CreatedAt.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture).</small>
                        <div>
                            <a asp-action="Details" asp-route-id="@company.CompanyID" class="btn btn-sm btn-primary">Details</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@company.CompanyID" class="btn btn-sm btn-secondary">Edit</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>